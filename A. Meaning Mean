import java.util.*;
public class A_Meaning_Mean {
    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        int t=sc.nextInt();
        while(t-- >0){
        int n=sc.nextInt();
        long arr[]=new long[n];
        for(int i=0;i<n;i++){
            arr[i]=sc.nextLong();
        }
        Arrays.sort(arr);
        long sum=(arr[0]+arr[1])/2;
        for(int i=2;i<n;i++){
            sum=(sum+arr[i])/2;
        }
        System.out.println(sum);
  
 
        }
}
}
