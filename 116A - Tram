import java.util.*;
public class A_Tram {
    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        int n=sc.nextInt();
        int arr[]=new int[2*n];
        for(int i=0;i<2*n;i++){
            arr[i]=sc.nextInt();
        }
        int sum=0,max=0;
        for(int i=0;i<2*n;i+=2){
            sum+=arr[i+1]-arr[i];
            if(sum>=max){
                max=sum;
            }
        }
        System.out.println(max);
        
}
}
