import java.util.*;
public class A_Legs {
    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        int t=sc.nextInt();
        while(t-- >0){
        int n=sc.nextInt();
        int c=0;
        while(n>2){
            n=n-4;
            c++;
        }
        if(n==0){
            System.out.println(c);
        }
        else System.out.println(c+1);

        }
}
}
